/* Estrutura condicional composta - utiliza o else
* V: Executa somente o bloco do if
* F: Executa somente o bloco do else
* Neste exemplo utilize hora cheia pois estamos usando a variável int
* Lembre-se que Else não possue condição
*/

import java.util.Scanner;

public class Oper_17 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		
		int hora;
		System.out.println("Quantas horas?");
		hora = sc.nextInt();

		/* Abrir e fechar {} no if neste modelo é opcional, mas deixa mais organizado
		* Quando tem apenas um comando dentro do IF não é necessário abrir e fechar chaves {}*/

		if (hora < 12) 
		System.out.println("Bom dia");
		
		else if (hora < 18) { 
			System.out.println("Boa tarde");
			}
			else {
			System.out.println("Boa noite");
			}
		
		sc.close();

	}
}
